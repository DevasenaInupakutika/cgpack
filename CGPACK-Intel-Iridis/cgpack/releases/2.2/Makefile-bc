#$Id: Makefile-bc 14 2014-12-01 10:14:16Z mexas $

#*robodoc*b* CGPACK/Makefile-bc
#  NAME
#    Makefile-bc
#  SYNOPSIS

FC=	ifort

#  PURPOSE
#    Build/install CGPACK on the University of Bristol BlueCrystal
#    computer with Intel Fortran compiler.
#  AUTHOR
#    Anton Shterenlikht
#  COPYRIGHT
#    See CGPACK_Copyright
#  SOURCE

#FFLAGS=	-c -coarray=distributed -debug=full -free -fPIC -warn all -std08 -warn stderrors
FFLAGS=		-c -coarray=distributed -debug full -free -fPIC -warn all -O2 -qopt-report

CGPACK=		cgcapack
MYLIB=		lib$(CGPACK).a
LIBDIR=		$(HOME)/lib
MODDIR=		$(HOME)/mod

SRC_MOD_L1=	cgca_m1co.f90
MOD_L1=		${SRC_MOD_L1:.f90=.mod}
OBJ_L1=		${SRC_MOD_L1:.f90=.o}
RPT_L1=		${SRC_MOD_L1:.f90=.optrpt}

SRC_MOD_L2=	cgca_m2alloc.f90 cgca_m2gb.f90 cgca_m2glm.f90 \
		cgca_m2hx.f90 cgca_m2out.f90 cgca_m2pck.f90 cgca_m2phys.f90 \
		cgca_m2red.f90 cgca_m2rnd.f90 cgca_m2rot.f90 cgca_m2stat.f90
		# cgca_m2mpiio.f90	# MPI+coarray not supported in ifort 14.0
MOD_L2=		${SRC_MOD_L2:.f90=.mod}
OBJ_L2=		${SRC_MOD_L2:.f90=.o}
RPT_L2=		$(SRC_MOD_L2:.f90=.optrpt)

SRC_MOD_L3_NOPRE=cgca_m3clvg.f90 cgca_m3gbf.f90 cgca_m3nucl.f90
MOD_L3_NOPRE=	${SRC_MOD_L3_NOPRE:.f90=.mod}
OBJ_L3_NOPRE=	${SRC_MOD_L3_NOPRE:.f90=.o}
RPT_L3_NOPRE=	$(SRC_MOD_L3_NOPRE:.f90=.optrpt)

SRC_MOD_L3_PRE=	cgca_m3sld.F90
MOD_L3_PRE=	$(SRC_MOD_L3_PRE:.F90=.mod)
OBJ_L3_PRE=	${SRC_MOD_L3_PRE:.F90=.o}
RPT_L3_PRE=	${SRC_MOD_L3_PRE:.F90=.optrpt}

MOD_L3=		$(MOD_L3_NOPRE) $(MOD_L3_PRE)
OBJ_L3=		$(OBJ_L3_NOPRE) $(OBJ_L3_PRE)
RPT_L3=		$(RPT_L3_NOPRE) $(RPT_L3_PRE)

SRC_MOD_L4=	# cgca_m4fr.f90
MOD_L4=		${SRC_MOD_L4:.f90=.mod}
OBJ_L4=		${SRC_MOD_L4:.f90=.o}

SRC_MOD_LTOP=	cgca.F90
MOD_LTOP=	${SRC_MOD_LTOP:.F90=.mod}
OBJ_LTOP=	${SRC_MOD_LTOP:.F90=.o}
RPT_LTOP=	${SRC_MOD_LTOP:.F90=.optrpt}

ALL_MOD=	${MOD_L1} ${MOD_L2} ${MOD_L3} ${MOD_LTOP}
ALL_OBJ=	${OBJ_L1} ${OBJ_L2} ${OBJ_L3} ${OBJ_LTOP}
ALL_RPT=	$(RPT_L1) $(RPT_L2) $(RPT_L3) $(RPT_LTOP)

.SUFFIXES:
.SUFFIXES: .F90 .f90 .mod .o

all: $(ALL_MOD) $(ALL_OBJ) $(MYLIB)

.f90.mod:
	$(FC) $(FFLAGS) $<

.f90.o:
	$(FC) $(FFLAGS) $<

.F90.mod:
	$(FC) $(FFLAGS) -DIFORT=yes $<

.F90.o:
	$(FC) $(FFLAGS) -DIFORT=yes $<

# module dependencies

$(MOD_L2) $(OBJ_L2): $(MOD_L1)
$(MOD_L3) $(OBJ_L3): $(MOD_L2)
$(MOD_L4) $(OBJ_L4): $(MOD_L3)
$(MOD_LTOP) $(OBJ_LTOP): $(MOD_L4)

$(MYLIB): $(ALL_OBJ)
	@if [ -e $(MYLIB) ]; then \
		rm $(MYLIB); \
	fi
	ar -r $(MYLIB) $(ALL_OBJ)

install: $(MYLIB) $(ALL_MOD)
	@if [ -e $(LIBDIR)/$(MYLIB) ]; then \
		echo $(LIBDIR)/$(MYLIB) already exists; \
		echo run \"make deinstall\" first; \
		exit 1; \
	fi
	cp $(MYLIB) $(LIBDIR)
	cp $(ALL_MOD) $(MODDIR)

deinstall:
	cd $(LIBDIR) && rm $(MYLIB)
	cd $(MODDIR) && rm $(ALL_MOD)

clean:
	rm $(ALL_MOD) $(ALL_OBJ) $(ALL_RPT) $(MYLIB)

#*roboend*
